@startuml

entity Block {
+ hash
+ height
+ timestamp
}

entity Transaction {
+ hash
+ identifiers
}

entity TransactionInput {
+ nullifier
+ valueCommitment
+ merkleTreeRoot
}

entity TransactionOutput {
+ coinCommitment
+ valueCommitment
}

entity ContractDeploy {
+ definition
+ address
+ initialState
}

entity ContractCall {
+ operation
+ newState
}

Block ||-|{ Transaction

Transaction ||--|{ TransactionInput
Transaction ||--o{ TransactionOutput
Transaction ||--o{ ContractDeploy
Transaction ||--o{ ContractCall
ContractCall }--|| ContractDeploy

@enduml
